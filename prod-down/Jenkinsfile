@Library('sbms-pipeline-shared@master') _

pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        disableConcurrentBuilds()
        timeout(time: 15, unit: 'MINUTES')
    }

    environment {
        PROD_HOST = "prod"
        DOCKER_HOST = "tcp://$PROD_HOST:2376"
        DOCKER_TLS_VERIFY = "1"
        DOCKER_CERT_PATH = "/root/.tls"
    }

    stages {
        stage('Tear Down Dev') {
            environment {
                APP_STACK_NAME = "sbms-prod-app"
            }
            steps {
                tearDown("$STACK_NAME")
            }
        }
    }
    post {
        success {
            notify('PROD_INFO', '*The PROD environment has been taken down.*')
        }
        failure {
            notify('PROD_WARN', '*The PROD environment did not shut down properly and may be in an unstable state.*')
        }
    }
}
