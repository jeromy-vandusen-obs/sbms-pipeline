pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        disableConcurrentBuilds()
        timeout(time: 15, unit: 'MINUTES')
    }

    environment {
        PROD_HOST = "172.24.140.83"
    }

    stages {
        environment {
            APP_SWARM_MANAGER = "$PROD_HOST:2375"
            APP_STACK_NAME = "sbms-prod-app"
        }
        stage('Tear Down Dev') {
            steps {
                sh "docker -H $APP_SWARM_MANAGER stack rm $APP_STACK_NAME"
            }
        }
    }
}
