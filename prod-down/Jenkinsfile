pipeline {
    agent any

    environment {
        PROD_MASTER_1 = "172.24.140.83"
        PROD_NODE_1 = "172.24.140.90"

        INFRA_PRIMARY_MANAGER = "$PROD_MASTER_1:2375"
        INFRA_SECONDARY_MANAGER = "$PROD_NODE_1:2375"
        APP_SWARM_MANAGER = "$PROD_MASTER_1:2375"
        APP_STACK_NAME = "sbms-prod-app"
        COMPOSE_PROJECT_NAME = "sbms-prod-infra"
    }

    stages {
        stage('Tear Down Dev') {
            steps {
                sh "docker -H $APP_SWARM_MANAGER stack rm $APP_STACK_NAME"
                sh "docker-compose -H $INFRA_PRIMARY_MANAGER -f sbms-infrastructure.yml down"
                sh "docker-compose -H $INFRA_SECONDARY_MANAGER -f sbms-infrastructure.yml down"
            }
        }
    }
}
