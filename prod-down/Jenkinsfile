pipeline {
    agent any

    environment {
        PROD_MASTER_1 = "172.24.140.83"
        PROD_NODE_1 = "172.24.140.90"

        INFRA_MANAGER = "$PROD_MASTER_1:2375"
        APP_SWARM_MANAGER = "$PROD_MASTER_1:2375"
        APP_STACK_NAME = "sbms-prod-app"
        NETWORK_NAME = "sbms-prod-net"
        NETWORK_HOST = "$INFRA_MANAGER"
    }

    stages {
        stage('Tear Down Dev') {
            steps {
                sh "docker -H $APP_SWARM_MANAGER stack rm $APP_STACK_NAME"
                sh "docker-compose -H $INFRA_MANAGER -f sbms-infrastructure.yml down"
                sh "chmod +x ./remove-network.sh"
                sh "./remove-network.sh"
            }
        }
    }
}
