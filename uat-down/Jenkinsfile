@Library('sbms-pipeline-shared@master') _

pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        disableConcurrentBuilds()
        timeout(time: 15, unit: 'MINUTES')
    }

    environment {
        UAT_HOST = "uat"
        DOCKER_HOST = "tcp://$UAT_HOST:2376"
        DOCKER_TLS_VERIFY = "1"
        DOCKER_CERT_PATH = "/root/.tls"
    }

    stages {
        stage('Tear Down Dev') {
            environment {
                STACK_NAME = "sbms-uat-app"
            }
            steps {
                dockerTearDown("$STACK_NAME")
            }
        }
    }
    post {
        success {
            notify('INFO', 'The *UAT* environment has been taken down.')
        }
        failure {
            notify('WARN', 'The *UAT* environment did not shut down properly and may be in an unstable state.')
        }
    }
}
